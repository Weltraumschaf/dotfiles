if [ -d "/usr/local/go/" ] ; then
  export GOROOT="/usr/local/go/"
  export GOBIN="/usr/local/go/bin"
  export PATH=$PATH:/usr/local/go/bin

  export GOARCH=amd64  

  if [ "linux-gnu" = "$OSTYPE" ]; then
    export GOOS=linux
    export GOPATH="{HOME}/lib/go"
  else 
    export GOOS=darwin
    export GOPATH="${HOME}/Library/go"
  fi
fi