# Perl 5
PERL="$HOME/perl5/"

if [ -d "$PERL" ] ; then
  export PERL_MM_OPT="INSTALL_BASE=$PERL"
  
  if [ -d "$PERL/bin" ] ; then
    export PATH="$PERL/bin:$PATH"
  fi
  
  if [ -f "$PERL/.modulebuildrc" ] ; then
    export MODULEBUILDRC="$PERL/.modulebuildrc"
  fi
  
  export PERL5LIB="$PERL/lib/perl5:$PERL/lib/perl5/darwin-2level"
fi